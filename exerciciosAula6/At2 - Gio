#include <stdio.h>

int main() {
    int n1, n2, n3;
    
    printf("Digite um número: ");
    scanf("%d", &n1);
    
    printf("Digite outro número: ");
    scanf("%d", &n2);
    
    printf("Digite mais um número: ");
    scanf("%d", &n3);
    
    if (n1 % 2 == 0){
        printf("O número %d é par \n", n1);
    }
    else{
        printf("O número %d é impar meu consagradooooo \n");
    }
    
    if (n2 % 2 == 0){
        printf("O número %d é par \n", n2);
    }
    else{
        printf("O número %d é impar meu consagradooooo \n");
    }
    
    if (n3 % 2 == 0){
        printf("O número %d é par \n", n3);
    }
    else{
        printf("O número %d é impar meu consagradooooo \n");
    }
    
    if (n1 > 0){
        printf("O número é positivo \n");
    }
    else{
        printf("O número é negativo PAYSANDUUUUUU \n");
    }
    
    if (n2 > 0){
        printf("O número é positivo \n");
    }
    else{
        printf("O número é negativo PAYSANDUUUUUU \n");
    }
    
    if (n3 > 0){
        printf("O número é positivo \n");
    }
    else{
        printf("O número é negativo PAYSANDUUUUUU \n");
    }
    
    if (n1 > n2 && n1 > n3 && n2 > n3){
        printf("O menor número é %d e o maior é %d\n", n3, n1);
    }
    else if (n2 > n1 && n2 > n3 && n1 > n3){
        printf("O menor número é %d e o maior é %d\n", n3, n2);
    }
    else if (n3 > n1 && n3 > n2 && n2 > n1){
        printf("O menor número é %d e o maior é %d\n", n1, n3);
    }
    else if (n1 > n2 && n1 > n3 && n3 > n2){
        printf("O menor número é %d e o maior é %d\n", n2, n1);
    }
    else if (n2 > n1 && n2 > n3 && n3 > n1){
        printf("O menor número é %d e o maior é %d\n", n1, n2);
    }
    else if (n3 > n1 && n3 > n2 && n1 > n2){
        printf("O menor número é %d e o maior é %d\n", n2, n3);
    }

return 0;
}
